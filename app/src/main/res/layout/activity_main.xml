<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@color/black">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/edittextdesign"
        android:id="@+id/edittextid1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:cursorVisible="false"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd">

    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="12dp"
        android:cursorVisible="false"
        android:background="@drawable/edittextdesign"
        android:id="@+id/edittextid2"
        android:layout_below="@id/edittextid1"
        android:textAlignment="textEnd">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/edittextid2"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:id="@+id/firstrowid"
            android:layout_below="@id/edittextid2">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="C"
                android:id="@+id/clearid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tooglebuttonid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:text="..."
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="x"
                android:id="@+id/cutid"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="/"
                android:id="@+id/divideid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:id="@+id/secondrowid"
            android:layout_below="@id/firstrowid">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="7"
                android:textSize="18sp"
                android:id="@+id/seven"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="8"
                android:textSize="18sp"
                android:textAlignment="center"
                android:id="@+id/eight"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="9"
                android:id="@+id/nine"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="x"
                android:id="@+id/multiplyid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:id="@+id/thirdrowid"
            android:layout_below="@id/secondrowid">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"
                android:textSize="18sp"
                android:id="@+id/four"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5"
                android:id="@+id/five"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="6"
                android:id="@+id/six"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="-"
                android:id="@+id/subtractid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:id="@+id/fourthrowid"
            android:layout_below="@id/thirdrowid">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="18sp"
                android:id="@+id/one"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:textSize="18sp"
                android:textAlignment="center"
                android:id="@+id/two"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:id="@+id/three"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+"
                android:textSize="18sp"
                android:id="@+id/addid"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:id="@+id/fifthrowid"
            android:layout_below="@id/fourthrowid">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="18sp"
                android:id="@+id/zeroid"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="."
                android:id="@+id/dotid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="="
                android:id="@+id/equalid"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="9dp"
                android:layout_weight="2"
                android:background="@drawable/buttondesign">

            </androidx.appcompat.widget.AppCompatButton>



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>